{{#extends 'base'}}

{{#block "content"}}
<h1 class="mt-3">-</h1>

<div class="container mt-5">
    <div class="text-center">

        <h1>MetaShop</h1>
        <h3 class="mt-3">No worries about money!</h3>
    </div>
    <div class="text-center pt-2">
        <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="Room">
        <label class="form-check-label" for="inlineCheckbox1">Room</label>
        </div>
        <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="Headshot">
        <label class="form-check-label" for="inlineCheckbox2">Headshot</label>
        </div>
        <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="Treatment">
        <label class="form-check-label" for="inlineCheckbox3">Treatment</label>
        </div>
    </div>
    <div class="text-center mt-2">
        <input type="submit" value="Filter" class="btn btn-lg btn-outline-dark mt-3">
    </div>



    <div class="row row-cols-1 row-cols-sm-4 g-4 mt-4 ">

        {{#each products}}
        <div class="col">
            <div class="card" style="width: 18rem;">
                {{#if this.image_url}}
                <img src="{{this.image_url}}" class="card-img-top" alt="Product Image" />
                {{/if}}

                <div class="card-body text-center">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                </div>
                <ul class="list-group list-group-flush">
                    {{!-- here the category display has bug, try manually fix by if  --}}
                    <li class="list-group-item text-center">Room</li>
                    <li class="list-group-item text-center"> {{#each this.tags}}
                        {{!-- this in this.name refer to this.tags --}}
                        <span class="badge bg-primary">{{this.name}}</span>
                        {{/each}}
                    </li>
                </ul>
                <div class="card-body">
                    <li class="list-group-item text-center">${{this.cost}}</li>
                    <div class="card-body">
                        <td style="width: 200px text-center">
                            <a href="/cart/add/{{this.id}}" class="btn btn-success btn-sm">AddCart</a>
                            <a href="/products/update/{{this.id}}" class="btn btn-primary btn-sm">Edit</a>
                            <a href="/products/delete/{{this.id}}" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </div>
                    {{!-- <a href="#" class="card-link">Card link</a>
                    <a href="#" class="card-link">Another link</a> --}}
                </div>
            </div>
        </div>
        {{/each}}



    </div>


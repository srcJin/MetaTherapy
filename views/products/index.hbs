{{#extends 'base'}}

{{#block "content"}}
<h1>All Products</h1>
<table class="table">
    <thead>
        <th>ID</th>
        <th>Name</th>
        <th>Cost</th>
        <th>Description</th>
        <th></th>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.cost}}</td>
            <td>{{this.description}}</td>
            <td>
                <a href="/products/update/{{this.id}}" class="btn btn-primary btn-sm">Edit</a>
                <a href="/products/delete/{{this.id}}" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{/block}}

{{/extends}}